doctype html
html
  head
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(href='/stylesheets/jquery-ui.css', rel='stylesheet')
    script(src='/javascripts/jquery-1.12.4.js')
    script(src='/javascripts/jquery-ui-1.12.1/jquery-ui.js')
    script(src='/javascripts/script.js')
    title From #{title}

  body(id="exp")
    #wrapper
      #header
        #header-right
          a(href='/')
            img(src="/images/cloud-logo.svg")
        #header-left
          h1  Spanner Example API

      #status
      #main
            br
            br
            span
            span.label projectId:
            input#projectId.inputBox(type='text', name='projectId', value=projectId)
            br
            span
            span.label instanceId:
            input#instanceId.inputBox(type='text', name='instanceId', value=instanceId)
            br
            span
            span.label databaseId:
            input#databaseId.inputBox(type='text', name='databaseId', value=databaseId)
            #action
            #menu
              input.button(type='submit', value='CreateDB', id='dbcreate')
              input.button(type='submit', value='Insert Data', id='dbinsert')
              input.button(type='submit', value='DB Query', id='dbquery')
              textarea(name='dbconsole', id='dbconsole')
